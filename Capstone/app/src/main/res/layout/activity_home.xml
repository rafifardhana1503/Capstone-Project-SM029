<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_home.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imgLeaf"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:contentDescription="Preview Gambar"
            android:scaleType="centerCrop" />

        <TextView
            android:text="Deteksi Daun Teh"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnTakePhoto"
            android:text="Ambil Foto"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnChooseGallery"
            android:text="Pilih dari Galeri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        

        <!-- ðŸ”½ Tambahan untuk menampilkan hasil deteksi -->
        <TextView
            android:id="@+id/txtPrediction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Prediksi Penyakit:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:textColor="#333333"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtRekomendasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rekomendasi:"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>